@model RegisterModel
@using BlazorIdentity.Models.Identity
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()

<h2>Kullanıcı Ekleme</h2>

<div class="col-md-5" style="font-weight: 500;">
    <hr />
    <div>
        <form asp-controller="Admin" asp-action="Create" method="post">
            <div asp-validation-summary="All" style="color:red"></div>
            <div class="mb-3">
                <label for="username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="UserName" value="" class="form-control" id="username" placeholder="Kullanıcı Adını Giriniz." autocomplete="off">
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">E-Mail</label>
                <input asp-for="Email" reqired value="" class="form-control" id="Email" placeholder="Email Adresi Giriniz." autocomplete="off">
            </div>


            <div class="mb-3">
                <label for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" value="" class="form-control" id="Password" placeholder="Sifre Giriniz." autocomplete="off">
            </div>

            <div class="form-group">
                <button class="btn btn-primary " id="btnkaydet"> Kaydet</button>
                <a style="margin-left:10px" asp-action="Index" class="btn btn-secondary"> Listeye Dön</a>
            </div>
        </form>
    </div>
</div>



